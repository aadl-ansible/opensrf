<?xml version="1.0"?>
<!-- This file follows the standard bootstrap config file layout found in opensrf_core.xml -->
<srfsh>
  <router_name>router</router_name>
  <domain>private.{{ inventory_hostname }}</domain>
  <username>opensrf</username>
  <passwd>{{ opensrf_ejabberd_private_users.opensrf.password }}</passwd>
  <port>5222</port>
  <logfile>{{ evergreen_install_prefix }}/var/log/srfsh.log</logfile>
  <loglevel>4</loglevel>
  <client>true</client>
</srfsh>
